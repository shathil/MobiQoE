<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/inocardview3"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@color/Beige"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:id="@+id/instructions_senseone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/instruct"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:background="@color/ForestGreen"
                android:paddingLeft="25dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_rowing_black_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Estimate Battery Capacity"
                    android:layout_alignTop="@+id/imageView"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
            <FrameLayout
                android:id="@+id/image_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:clipChildren="false">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/batterysense_image"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="center"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ForestGreen"
                    android:textSize="16sp"
                    android:text="Check Battery Level is less than 15%." />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:weightSum="1">
                <TextView
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ForestGreen"
                    android:textSize="16sp"
                    android:text="Turnoff WiFi or Mobile Data."
                    android:layout_weight="0.57" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ForestGreen"
                    android:textSize="16sp"
                    android:text="Power off the Display." />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ForestGreen"
                    android:textSize="16sp"
                    android:text="Connect the Charger."/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/ForestGreen"/>

</LinearLayout>